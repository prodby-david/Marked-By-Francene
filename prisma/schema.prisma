generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(cuid())
  email String @unique
  firstname String
  lastname String
  password String 
  createdAt DateTime @default(now())
}

model Reservation {
  id String @id @default(cuid())
  lastname String
  firstname String
  location String
  contactNumber String
  email String
  theme String
  date String
  time String
  notes String?
  createdAt DateTime @default(now())
}
